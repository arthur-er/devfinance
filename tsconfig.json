{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "App/*": ["./app/*"],
      "Providers/*": ["./providers/*"],
      "Contracts/*": ["./contracts/*"],
      "Container": ["./core/container"],
      "Core/*": ["./core/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  }
}
